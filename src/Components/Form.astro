<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <img class="mx-auto h-16 w-auto" src="/bonda1.png" alt="Bondamani" />
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Everything starts here!</h2>
      <p class="mt-2 text-center text-sm text-gray-600 max-w">
        Already registered?
        <a href="/" class="font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">Sign in</a>
      </p>
    </div>
  
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
        <form class="mb-0 space-y-6" action="#" method="POST">
          <div>
            <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
            <div class="mt-1">
              <input id="username" name="username" type="text" autocomplete="username" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
            <div class="mt-1">
              <input id="name" name="name" type="text" autocomplete="name" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="emailid" class="block text-sm font-medium text-gray-700">Email id</label>
            <div class="mt-1">
              <input id="emailid" name="emailid" type="text" autocomplete="emailid" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="profilepic" class="block text-sm font-medium text-gray-700">Profile Picture</label>
            <div class="mt-1">
              <input id="profilepic" name="profilepic" type="text" autocomplete="profilepic" required class="p-2 rounded-xl border" />
            </div>
          </div>
          
          
          <div>
            <label for="theme" class="block text-sm font-medium text-gray-700">Theme</label>
            <div class="mt-1">
              <input id="theme" name="theme" type="text" autocomplete="theme" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="roles" class="block text-sm font-medium text-gray-700">Roles</label>
            <div class="mt-1">
              <input id="roles" name="roles" type="text" autocomplete="roles" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="bio" class="block text-sm font-medium text-gray-700">Bio</label>
            <div class="mt-1">
              <input id="bio" name="bio" type="text" autocomplete="bio" required class="p-2 rounded-xl border" />
            </div>
          </div>
          


          <div>
            <label for="projectname" class="block text-sm font-medium text-gray-700">Project Name</label>
            <div class="mt-1">
              <input id="projectname" name="projectname" type="text" autocomplete="projectname" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="projectdesc" class="block text-sm font-medium text-gray-700">Project Description</label>
            <div class="mt-1">
              <input id="projectdesc" name="projectdesc" type="text" autocomplete="projectdesc" required class="p-2 rounded-xl border" />
            </div>
          </div>
          
          
          <div>
            <label for="domain" class="block text-sm font-medium text-gray-700">Domain</label>
            <div class="mt-1">
              <input id="domain" name="domain" type="text" autocomplete="domain" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="deadline" class="block text-sm font-medium text-gray-700">Deadline</label>
            <div class="mt-1">
              <input id="deadline" name="deadline" type="text" autocomplete="deadline" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="target" class="block text-sm font-medium text-gray-700">Target</label>
            <div class="mt-1">
              <input id="target" name="target" type="text" autocomplete="target" required class="p-2 rounded-xl border" />
            </div>
          </div>
        
          
          <div>
            <label for="compname" class="block text-sm font-medium text-gray-700">Competitor's name</label>
            <div class="mt-1">
              <input id="compname" name="compname" type="text" autocomplete="compname" required class="p-2 rounded-xl border" />
            </div>
          </div>

          <div>
            <label for="comppic" class="block text-sm font-medium text-gray-700">Competitor's Picture</label>
            <div class="mt-1">
              <input id="comppic" name="comppic" type="text" autocomplete="comppic" required class="p-2 rounded-xl border" />
            </div>
          </div>
        
          <div>
            <label for="company-size" class="block text-sm font-medium text-gray-700">Company size</label>
            <div class="mt-1">
              <select name="company-size" id="company-size" class="p-2 rounded-xl border">
                <option value="">Please select</option>
                <option value="small">1 to 10 employees</option>
                <option value="medium">11 to 50 employees</option>
                <option value="large">50+ employees</option>
              </select>
            </div>
          </div>
  
          <div class="flex items-center">
            
            <label for="terms-and-privacy" class="ml-2 block text-sm text-gray-900"
              >Clicking 'Start' follows creating
              <a href="#" class="text-indigo-600 hover:text-indigo-500">profile</a>
              and
              <a href="#" class="text-indigo-600 hover:text-indigo-500">projects</a>
            </label>
          </div>
          <div>
            <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#ea580c] hover:scale-110 duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Sign up</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  