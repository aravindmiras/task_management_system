---
const {id, task, status, priority, deadline, profile, desc, projectid}= Astro.props;
import DeleteTask from '../DeleteTask.jsx';
---
<div class="flex flex-wrap justify-center mt-10">
  <div class="flex rounded-lg h-full w-full  bg-[#e66b29e5] p-8 flex-col">
    <div class="flex items-center mb-3">
        <div
            class="w-8 h-8 mr-3 inline-flex items-center justify-center rounded-full bg-indigo-500 text-white flex-shrink-0">
            
            <img src={profile} class="w-10 h-10 rounded-3xl object-cover">
        </div>
        <h2 class="text-white text-lg font-semibold">{task}</h2>
    </div>

<div class="flex flex-col justify-between flex-grow">
  <p class="leading-relaxed text-base text-white">
    <ul>
        <li>{desc}</li>
        <li><b>STATUS: </b>{status}</li>
        <li><b>PRIORITY: </b>{priority}</li>
        <li><b>DEADLINE: </b>{deadline}</li>
        <li><b>STATUS: </b>{status}</li>
    </ul>
  </p>
  <a href="">
    <button class="w-1/2 block mx-auto rounded-full bg-white hover:scale-110 duration-200 font-semibold text-[#ea580c] px-6 py-2 mt-5">Update</button>
  </a>
 <DeleteTask taskid={id} projectid={projectid}client:load/>
  
</div>
</div>
</div>
</div>